root = true

[*]
charset = utf-8
indent_style = space
indent_size = 4
insert_final_newline = true
end_of_line = lf
trim_trailing_whitespace = true

[*.{yml,gyp}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[*.{cpp,h,hpp}]
indent_size = 2
trim_trailing_whitespace = false
# Suppress arithmetic overflow warning as its way too sensitive
dotnet_diagnostic.C26451.severity = none
